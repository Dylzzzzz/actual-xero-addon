{
  "name": "actual-xero-sync",
  "version": "1.0.0",
  "description": "Home Assistant Add-on to sync business transactions from Actual Budget to Xero via Xano",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=e2e",
    "test:integration": "jest --testPathPattern=e2e",
    "test:e2e": "node scripts/run-e2e-tests.js",
    "test:e2e:verbose": "node scripts/run-e2e-tests.js --verbose",
    "test:performance": "jest tests/e2e/performance.test.js --runInBand",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "validate:deployment": "node scripts/validate-deployment.js",
    "validate:config": "node scripts/validate-config.js",
    "test:deployment": "node scripts/test-deployment.js",
    "validate:production": "node scripts/run-production-validation.js",
    "audit": "npm audit --audit-level moderate",
    "build": "docker build -t actual-xero-sync .",
    "build:test": "docker build -t actual-xero-sync-test ."
  },
  "keywords": [
    "home-assistant",
    "actual-budget",
    "xero",
    "xano",
    "sync",
    "accounting"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@actual-app/api": "^6.0.0",
    "axios": "^1.6.0",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "js-yaml": "^4.1.0",
    "node-cron": "^3.0.3",
    "simple-oauth2": "^5.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
